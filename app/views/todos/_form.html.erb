<%= form_with(model: todo, local: true, html: { class: "needs-validation", novalidate: true }) do |form| %>
  <% if todo.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading">エラーが <%= pluralize(todo.errors.count, "件") %> あります:</h4>
      <ul>
        <% todo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, "タイトル", class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, "説明", class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :start_time, "開始日時", class: "form-label" %>
    <div class="col-7 d-flex align-items-center">
      <%= form.datetime_select :start_time, {}, { class: "form-control text-center mx-1" } %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :end_time, "終了日時", class: "form-label" %>
    <div class="col-7 d-flex align-items-center">
      <%= form.datetime_select :end_time, {}, { class: "form-control text-center mx-1" } %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>