<body>
  <div class="container mt-5">
    <h1 class="mb-4">タスク一覧</h1>

    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>タイトル</th>
            <th>説明</th>
            <th>開始日時</th>
            <th>終了日時</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @todos.each do |todo| %>
            <tr>
              <td><%= todo.title %></td>
              <td><%= todo.description %></td>
              <td><%= todo.start_time.strftime('%Y/%m/%d %H:%M') %></td>
              <td><%= todo.end_time.strftime('%Y/%m/%d %H:%M') %></td>
              <td><%= link_to '詳細', todo, class: 'btn btn-primary' %></td>
              <td><%= link_to '編集', edit_todo_path(todo), class: 'btn btn-warning' %></td>
              <td><%= link_to '削除', todo, method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <br>

    <%= link_to '新規タスク作成', new_todo_path, class: 'btn btn-success' %>
  </div>
</body>
