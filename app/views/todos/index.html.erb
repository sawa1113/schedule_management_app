<p id="notice"><%= notice %></p>

<h1>Todos</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>説明</th>
      <th>開始日時</th>
      <th>終了日時</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.title %></td>
        <td><%= todo.description %></td>
        <td><%= todo.start_time.strftime('%Y/%m/%d %H:%M') %></td>
        <td><%= todo.end_time.strftime('%Y/%m/%d %H:%M') %></td>
        <td><%= link_to '詳細', todo %></td>
        <td><%= link_to '編集', edit_todo_path(todo) %></td>
        <td><%= link_to '削除', todo, method: :delete, data: { confirm: '本当に削除してもいいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

